<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
             xmlns:s="urn:import:org.gwtbootstrap3.extras.select.client.ui"
>

  <ui:with field="i18n" type="org.jbpm.console.ng.cm.client.resources.i18n.Constants"/>

  <b:Container fluid="true">
    <b:Row>
      <b:Column size="MD_12">
        <b:Form type="HORIZONTAL">
          <b:FieldSet>
            <b:FormGroup ui:field="displayerSelectorGroup">
              <b:FormLabel for="displayerSelector" text="Data Set" addStyleNames="col-md-4" showRequiredIndicator="true"/>
              <b:Column size="MD_8">
                <s:Select ui:field="displayerSelector"/>
                <b:HelpBlock ui:field="displayerHelp"/>
              </b:Column>
            </b:FormGroup>
            <b:FormGroup ui:field="dataSetColumnSelectorGroup">
              <b:FormLabel for="dataSetColumnSelector" text="Data Set Id Column" addStyleNames="col-md-4" showRequiredIndicator="true"/>
              <b:Column size="MD_8">
                <s:Select ui:field="dataSetColumnSelector"/>
                <b:HelpBlock ui:field="dataSetColumnHelp"/>
              </b:Column>
            </b:FormGroup>
            <b:FormGroup ui:field="buildingBlockGroup">
              <b:FormLabel for="buildingBlockSelector" text="jBPM Building block" addStyleNames="col-md-4" showRequiredIndicator="true"/>
              <b:Column size="MD_8">
                <s:Select ui:field="buildingBlockSelector"/>
                <b:HelpBlock ui:field="buildingBlockHelp"/>
              </b:Column>
            </b:FormGroup>
          </b:FieldSet>
        </b:Form>
      </b:Column>
    </b:Row>
  </b:Container>

</ui:UiBinder>