<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'
             xmlns:b='urn:import:org.gwtbootstrap3.client.ui'
             xmlns:uf='urn:import:org.uberfire.ext.widgets.table.client'>

    <ui:with field="i18n" type="org.jbpm.workbench.es.client.i18n.Constants"/>

    <ui:style>

        .textareaErrors {
            user-select: text;
            flex-direction: column;
            resize: none;
            cursor: auto;
            white-space: pre-wrap;
            word-wrap: break-word;
            width: 100%;
        }


    </ui:style>

    <b:Container fluid="true">
        <b:Row>
            <b:Column size="MD_12">
                <b:Form type="HORIZONTAL">
                    <b:FormGroup>
                        <b:FormLabel addStyleNames="col-md-4">
                            <ui:text from="{i18n.Number_Of_Attempted_Executions}"/>
                        </b:FormLabel>
                        <b:Column size="MD_8">
                            <b:FormControlStatic ui:field="jobRetries"/>
                        </b:Column>
                    </b:FormGroup>

                    <b:FormGroup>
                        <b:FormLabel addStyleNames="col-md-4">
                            <ui:text from="{i18n.Execution_Parameters}"/>
                        </b:FormLabel>
                        <b:Column size="MD_8">
                            <uf:DataGrid ui:field="executionParametersGrid" bordered="true" striped="true" hover="true"/>
                        </b:Column>
                    </b:FormGroup>

                    <b:FormGroup ui:field="errorControlGroup">
                        <b:FormLabel addStyleNames="col-md-4">
                            <ui:text from="{i18n.Exceptions_Occurred}"/>
                        </b:FormLabel>
                        <b:Column size="MD_8">
                            <b:TextArea ui:field="errorsOccurredList" addStyleNames="{style.textareaErrors}"/>
                        </b:Column>
                    </b:FormGroup>
                </b:Form>
            </b:Column>
        </b:Row>
    </b:Container>

</ui:UiBinder>